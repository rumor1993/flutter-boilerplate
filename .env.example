# API Configuration
API_BASE_URL=https://api.example.com
API_TIMEOUT=30000

# Google Sign-In Configuration (iOS/Android Client IDs)
GOOGLE_CLIENT_ID_IOS=your_ios_client_id_here
GOOGLE_CLIENT_ID_ANDROID=your_android_client_id_here
GOOGLE_CLIENT_ID_WEB=your_web_client_id_here

# Development Environment
DEBUG_MODE=true
LOG_LEVEL=debug

# Optional: Database Configuration
DATABASE_URL=your_database_url_here

# Optional: Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_API_KEY=your_firebase_api_key

# Optional: Sentry Configuration (Error Reporting)
SENTRY_DSN=your_sentry_dsn_here

# App Configuration
APP_NAME=Flutter Boilerplate
APP_VERSION=1.0.0